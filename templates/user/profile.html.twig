{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Profile{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-auto">
                    <span
                        class="avatar avatar-xl"
                        {% if user.avatar %}
                            style="background-image: url('{{ vich_uploader_asset(user.avatar) }}')"
                        {% endif %}
                    >
                        {{ not user.avatar ? user.fullName|initials[:2] : '' }}
                    </span>
                </div>
                <div class="col">
                    <h2 class="page-title">{{ user.fullName }}</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">

    </div>
{% endblock %}
